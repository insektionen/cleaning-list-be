{
	"preset": "ts-jest",
	"testEnvironment": "node",
	"verbose": true,
	"resetMocks": true,
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/server/**/*.routes.ts",
		"src/utils/**/*.ts",
		"!src/utils/passwordRecovery.ts"
	],
	"coverageDirectory": "test/coverage",
	"coverageThreshold": {
		"global": {
			"branches": 100,
			"functions": 100,
			"lines": 100
		}
	}
}
